<root>
	<dynamic-element name='item-group-name' type='text' index-type='text' repeatable='false'>
		<meta-data>
			<entry name="displayAsTooltip"><![CDATA[false]]></entry>
			<entry name="required"><![CDATA[true]]></entry>
			<entry name="instructions"><![CDATA[This field is for the title of the following repeated items]]></entry>
			<entry name="label"><![CDATA[Group Name]]></entry>
			<entry name="predefinedValue"><![CDATA[]]></entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element name='item-title' type='text' index-type='text' repeatable='true'>
		<dynamic-element name='item-link' type='text' index-type='text' repeatable='false'>
			<meta-data>
				<entry name="displayAsTooltip"><![CDATA[false]]></entry>
				<entry name="required"><![CDATA[false]]></entry>
				<entry name="instructions"><![CDATA[URL to a page of the featured item]]></entry>
				<entry name="label"><![CDATA[URL Link]]></entry>
				<entry name="predefinedValue"><![CDATA[]]></entry>
			</meta-data>
		</dynamic-element>
		<dynamic-element name='item-body' type='text_area' index-type='text' repeatable='false'>
			<meta-data>
				<entry name="displayAsTooltip"><![CDATA[false]]></entry>
				<entry name="required"><![CDATA[false]]></entry>
				<entry name="instructions"><![CDATA[This is the description of the featured item]]></entry>
				<entry name="label"><![CDATA[Item Content]]></entry>
				<entry name="predefinedValue"><![CDATA[]]></entry>
			</meta-data>
		</dynamic-element>
		<meta-data>
			<entry name="displayAsTooltip"><![CDATA[true]]></entry>
			<entry name="required"><![CDATA[true]]></entry>
			<entry name="instructions"><![CDATA[This is this item's title]]></entry>
			<entry name="label"><![CDATA[Item Title]]></entry>
			<entry name="predefinedValue"><![CDATA[]]></entry>
		</meta-data>
	</dynamic-element>
</root>